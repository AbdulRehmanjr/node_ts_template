{
  "compilerOptions": {
    "target": "es5",                          
    "module": "commonjs",                    
    "lib": ["es6"],                     
    "allowJs": true,
    "outDir": "build",                          
    "rootDir": "src",
    "strict": false,         
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./", 
    "paths": {
      "@controllers/*": ["controllers/*"], 
      "@models/*": ["models/*"], 
      "@routes/*": ["routes/*"] ,
      "@middlewares":["middlewares/*"],
      "@security":["security/*"],
      "@services":["services/*"]
    }
  },
  "include": ["src","**/*.ts"],
}